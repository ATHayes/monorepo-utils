{
  "name": "@monorepo-utils/collect-changelog",
  "version": "1.1.0",
  "description": "Collect CHANGELOG from tags.",
  "keywords": [
    "changelog",
    "lerna",
    "monorepo"
  ],
  "homepage": "https://github.com/azu/monorepo-utils",
  "bugs": {
    "url": "https://github.com/azu/monorepo-utils/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/",
    "template/"
  ],
  "main": "lib/collect-changelog-from-tag.js",
  "types": "lib/collect-changelog-from-tag.d.ts",
  "bin": {
    "monorepo-utils-collect-changelog": "./bin/cmd.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/monorepo-utils.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "prepublish": "npm run --if-present build",
    "test": "jest --no-cache",
    "test:updateSnapshot": "jest -u",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@monorepo-utils/package-utils": "^1.1.0",
    "cclog-parser": "^1.1.0",
    "changelog-parser": "^2.1.0",
    "handlebars": "^4.0.11",
    "meow": "^5.0.0"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.38",
    "@types/jest": "^23.3.0",
    "@types/load-json-file": "^2.0.7",
    "@types/node": "^10.5.2",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "typescript": "^2.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
