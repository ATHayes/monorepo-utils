{
  "name": "@monorepo-utils/publish",
  "version": "1.2.0",
  "description": "Publish packages to npm if needed. ",
  "license": "MIT",
  "files": [
    "publish.js",
    "utils"
  ],
  "main": "lib/publish.js",
  "types": "lib/publish.d.ts",
  "bin": {
    "monorepo-utils-publish": "publish.js"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "prepublish": "npm run --if-present build",
    "test": "jest",
    "watch": "tsc -p . --watch"
  },
  "dependencies": {
    "@monorepo-utils/package-utils": "^1.1.0",
    "can-npm-publish": "^1.3.1",
    "chalk": "^2.3.0",
    "child-process-promise": "^2.2.1",
    "cli-spinners": "^1.1.0",
    "inquirer": "^6.0.0",
    "log-update": "^2.3.0",
    "meow": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.5",
    "consolemock": "^1.1.0",
    "cross-env": "^5.2.0",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.0",
    "typescript": "^3.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "./test/.*.ts$",
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
