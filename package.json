{
  "private": true,
  "name": "monorepo-utils",
  "version": "1.0.0",
  "description": "monorepo utilities monorepo",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.5.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn run build",
    "test": "lerna run test",
    "test:updateSnapshot": "lerna run test:updateSnapshot",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "publish": "node scripts/release/publish.js",
    "publish:ci": "node scripts/release/publish.js --ci",
    "version_up:major": "lerna publish --skip-npm --conventional-commits --cd-version major",
    "version_up:minor": "lerna publish --skip-npm --conventional-commits --cd-version minor",
    "version_up:patch": "lerna publish --skip-npm --conventional-commits --cd-version patch",
    "version_up": "lerna publish --skip-npm --conventional-commits",
    "copy-changelog": "git tag --points-at HEAD | xargs -I{} monorepo-utils-collect-changelog {} | pbcopy",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "precommit": "lint-staged",
    "postcommit": "git reset"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@monorepo-utils/*"
    ]
  },
  "keywords": [
    "monorepot"
  ],
  "author": "azu",
  "license": "MIT",
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.9.2"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
